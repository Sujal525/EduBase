{
  "name": "@privy-io/server-auth",
  "version": "1.20.2",
  "description": "Server-side client for the Privy API",
  "keywords": [
    "authentication",
    "authorization",
    "identity",
    "privacy",
    "privy",
    "user data",
    "web3"
  ],
  "homepage": "https://docs.privy.io",
  "bugs": {
    "url": "https://privy.io/slack"
  },
  "license": "Apache-2.0",
  "author": "privy.io",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/dts/index.d.ts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/dts/index.d.mts",
        "default": "./dist/esm/index.mjs"
      }
    },
    "./viem": {
      "require": {
        "types": "./dist/dts/viem.d.ts",
        "default": "./dist/cjs/viem.js"
      },
      "import": {
        "types": "./dist/dts/viem.d.mts",
        "default": "./dist/esm/viem.mjs"
      }
    }
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.mjs",
  "types": "./dist/dts/index.d.ts",
  "typings": "./dist/dts/index",
  "directories": {
    "test": "test"
  },
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rollup --config rollup.types.mjs && rollup --config rollup.build.mjs",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist .turbo",
    "dev": "concurrently --prefix=none \"rollup --config rollup.types.mjs --watch\" \"rollup --config rollup.dev.mjs --watch\"",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "lint": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\"",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "jest --testMatch \"**/test/unit/**/*.test.ts\" && npm run test:types",
    "test-integration": "jest --testMatch \"**/test/integration/**/*.test.ts\"",
    "test:types": "tstyche"
  },
  "dependencies": {
    "@noble/curves": "^1.6.0",
    "@noble/hashes": "^1.5.0",
    "@privy-io/public-api": "2.21.2",
    "@solana/web3.js": "^1.95.8",
    "canonicalize": "^2.0.0",
    "dotenv": "^16.0.3",
    "jose": "^4.10.4",
    "node-fetch-native": "^1.4.0",
    "redaxios": "^0.5.1",
    "svix": ">=1.29.0 <= 1.37.0 || ^1.40.0",
    "ts-case-convert": "^2.0.2",
    "type-fest": "^3.6.1"
  },
  "devDependencies": {
    "@privy-io/build-config": "*",
    "@privy-io/tsconfig": "*",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-replace": "^6.0.1",
    "@rollup/plugin-swc": "^0.4.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@swc/core": "^1.10.0",
    "@swc/plugin-styled-components": "^6.0.1",
    "glob": "^10.3.12",
    "rollup": "^4.28.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-dts": "^6.1.1",
    "@privy-io/eslint-config-custom": "*",
    "@tsconfig/node16-strictest-esm": "^1.0.3",
    "@tsconfig/recommended": "^1.0.1",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.11.3",
    "axios": "^1.5.1",
    "ts-jest": "^29.0.3",
    "tstyche": "^3.5.0",
    "typescript": "~5.5.3",
    "viem": "^2"
  },
  "peerDependencies": {
    "viem": "^2"
  },
  "peerDependenciesMeta": {
    "viem": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
